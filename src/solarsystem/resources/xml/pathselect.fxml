<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="solarsystem.model.PathSelectionController"
    xmlns:fx="http://javafx.com/fxml" styleClass="root">
  
  <center>
  	<Pane fx:id="systemPane" prefWidth="600" prefHeight="600"/>
  </center>
  
  <right>
  
      <GridPane styleClass="controlPane" vgap="10" prefWidth="150">
      <padding>
           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>

      <Text fx:id="routeList" styleClass="route_label" text="" wrappingWidth="120"
        GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.valignment="TOP"/>

      <Slider fx:id="zoomSlide" orientation="VERTICAL" min="0.045" max="1.25" value="0.045" prefHeight="500"
        GridPane.columnIndex="1" GridPane.rowIndex="0"/>

      <Button onAction="#centerPlanets" text="Centre"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>

      <Button fx:id="startButton" onAction="#startJourney" text="Start Journey"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>

      </GridPane>
  
  </right>

  <stylesheets>
    <URL value="@../css/window.css" />
    <URL value="@../css/spacebodies.css"/>
  </stylesheets>
  
</BorderPane>