<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="solarsystem.model.PathSelectionController" 
    xmlns:fx="http://javafx.com/fxml" styleClass="root">
  
  <center>
  	<Pane fx:id="systemPane" prefWidth="500" prefHeight="500"/>
  </center>
  
  <right>
  
  <GridPane styleClass="controlPane" vgap="10">
  <padding>
       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
  <Label fx:id="routeList" styleClass="route_label" text="Start Journey:"
  	GridPane.columnIndex="0" GridPane.rowIndex="0"/>
  
  <Slider fx:id="zoomSlide" orientation="VERTICAL" min="0.065" max="1.35" value="0.7075" prefHeight="400"
  	GridPane.columnIndex="1" GridPane.rowIndex="0"/>
  
  <Button onAction="#centerPlanets" text="Centre"
  	GridPane.columnIndex="0" GridPane.rowIndex="2"/>
  
  <Button fx:id="startButton" onAction="#startJourney" text="Start Journey"
  	GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  
  </GridPane>
  
  </right>   
  
  <stylesheets>
    <URL value="@../css/window.css" />
    <URL value="@../css/spacebodies.css"/>
  </stylesheets>
  
</BorderPane>