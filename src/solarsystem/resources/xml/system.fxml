<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:controller="solarsystem.model.SolarSystemController" 
    xmlns:fx="http://javafx.com/fxml" styleClass="root">

  <center>
  	<Pane fx:id="systemPane" prefWidth="500" prefHeight="500"/>
  </center>
  
  <right>

  <VBox styleClass="controlPane" alignment="CENTER" spacing="10">
      <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <Slider fx:id="zoomSlide" orientation="VERTICAL" min="0.045" max="1.35" value="0.7075" prefHeight="400"/>

      <Button fx:id="switchScene" onAction="#stopTimeline" text="Map Journey"/>

      <HBox spacing="10" alignment="CENTER">
          <Button onAction="#buttonSpeedMed" text="x0.5"/> <Button onAction="#buttonSpeedFast" text="x1"/>
      </HBox>
  </VBox>

  </right>
  
  <stylesheets>
    <URL value="@../css/window.css" />
    <URL value="@../css/spacebodies.css"/>
  </stylesheets>
  
</BorderPane>
